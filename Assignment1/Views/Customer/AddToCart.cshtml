
@{
    ViewBag.Title = "AddToCart";
}

<h2>AddToCart</h2>

<form action="" method="post">

    <label for="">Name</label>
    <input type="text" class="form-control" value="@Model.Name" name="Name">

    <label for="">Price</label>
    <input type="text" class="form-control" value="@Model.Price" name="Price">

    <label for="">Categories ID</label>
    <input type="text" class="form-control" value="@Model.CategoryID" name="CategoryID">

    <label for="">Quantity</label>
    <input type="text" class="form-control" value="@Model.Quantity" name="Quantity">


    <br />
    <br />

    <button type="submit" class="btn btn-primary">Cart</button>

</form>